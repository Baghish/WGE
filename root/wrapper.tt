<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-type" content="text/html; charset=[% settings.charset %]" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>[% template.title || "WGE" %]</title>

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/2.1.1/css/bootstrap.min.css">  
    <link rel="stylesheet" href="[% c.uri_for('static/css/jquery-ui-1.9.2.custom.min.css') %]" />
    <link rel="stylesheet" href="[% c.uri_for('static/css/style.css') %]" />
    <link rel="shortcut icon" type="image/x-icon" href="[% c.uri_for('favicon.ico') %]">

    <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="[% c.uri_for('static/js/jquery-ui-1.9.2.custom.min.js') %]"></script>
    <script type="text/javascript">
      //set this here so all js classes can know the base_url
      var base_url = "[% c.uri_for( '' ) %]"
    </script>
    <script src="[% c.uri_for( 'static/js/wge-utils.js' ) %]"></script>

    <!-- Poller for the design status progress bar -->
    <script src="[% c.uri_for('static/js/poller.js') %]"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div class="navbar">
        <div class="navbar-inner">
          <a class="brand" href="#">HTGT WGE 
              [%- IF settings.environment == 'development' -%]
                [ DEVEL ]
              [%- END -%]
          </a>
          <ul class="nav">
            <li [% IF (template.tab_name == 'WGE' OR template.tab_name == undef) %] class="active" [% END %]>
            <a href="[% c.uri_for('/') %]">Home</a></li>
            <li [% IF (template.tab_name == 'Paired CRISPR Search') %] class="active" [% END %]>
            <a href="[% c.uri_for('/find_crisprs') %]">Crispr Finder</a></li>

            <li class="dropdown [% IF template.tab_name == 'Gibson' %] active[% END %]" >
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Gibson Designs<b class="caret"></b></a>
              <ul class="dropdown-menu">            
                <li><a href="[% c.uri_for('/gibson_design_gene_pick/Human') %]">Create Human Design</a></li>
                <li><a href="[% c.uri_for('/gibson_design_gene_pick/Mouse') %]">Create Mouse Design</a></li>                
                <li><a href="[% c.uri_for('/gibson_design_attempts') %]">Design Attempts</a></li>
                <li><a href="[% c.uri_for('/view_gibson_designs') %]">View Designs</a></li>
              </ul>
            </li>
            
            <li [% IF template.tab_name == 'About the CRISPR finder' %] class="active" [% END %]>
            <a href="[% c.uri_for('/crispr_help') %]">Help</a></li>
            <li [% IF template.tab_name == 'About WTSI Genome Editing' %] class="active" [% END %]>
            <a href="[% c.uri_for('/about') %]">About</a></li>

            <li [% IF template.tab_name == 'Contact' %] class="active" [% END %]>
            <a href="[% c.uri_for('/contact') %]">Contact</a></li>
          </ul>
        </div>
    </div>

    <div class="container">
      <!-- general error box for javascript to use -->
        <div class="alert alert-danger alert-dismissable" id="alert_error" style="display:none">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <span></span>
        </div>

        <!-- catalyst error message disply taken from LIMS2 -->
        [% SET error = error_msg || c.flash.error_msg; IF error.length > 0 %]
        <div class="alert alert-error">
          <button class="close" data-dismiss="alert" href="#">&times;</button>
          <p>[% error %]</p>
        </div>
        [% END %]
        [% SET info = info_msg || c.flash.info_msg; IF info.length > 0 %]
        <div class="alert alert-info">
          <button class="close" data-dismiss="alert" href="#">&times;</button>
          <p>[% info %]</p>
        </div>
        [% END %]
        [% SET success = success_msg || c.flash.success_msg; IF success.length > 0 %]
        <div class="alert alert-success">
          <button class="close" data-dismiss="alert" href="#">&times;</button>
          <p>[% success | none %]</p>
        </div>
        [% END %]

        [% IF template.tab_name %]
        <div class="page-header">
          <h1>[% template.tab_name %]</h1>
        </div>
        [% END %]

        [% content %]
    </div>
</body>
</html>
